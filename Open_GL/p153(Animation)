#include <windows.h>
#include <GL/glut.h>

void Draw();

int APIENTRY WinMain(HINSTANCE hInstance,HINSTANCE hPrevInstance
		  ,LPSTR lpszCmdParam,int nCmdShow)

{
	glutCreateWindow("Creat Triple");
	glutDisplayFunc(Draw);
	glutMainLoop();
	return 0;
}

void Draw()
{
	int i;
	float x1 = -0.9, x2 = - 0.2;
	float y1 = 0.4, y2 = -0.4;

	
	
		for(i=0; i<5; i++){						
			glClear(GL_COLOR_BUFFER_BIT);
			glBegin(GL_POLYGON);			
			glVertex3f(x1, y1, 0);
			glVertex3f(x1, y2, 0);
			glVertex3f(x2, y2, 0);
			glVertex3f(x2, y1, 0);			
			x1 += 0.2; x2 +=0.2;
			y1 += 0.2; y2 +=0.2;						
			glEnd();
			glFlush();			
			Sleep(1000);
			//glutPostRedisplay();
		}		
	

	
}
